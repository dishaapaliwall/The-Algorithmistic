<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Searching Algorithms</title>

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800;900&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/c737e8ac77.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css">
  <link rel="stylesheet" href="/css/style1.css" />
  
  <style>
    .main-title {
      text-align: center;
      margin-left: 25px;      
      font-size: 5rem;
      font-weight: 900;
      letter-spacing: -0.5px;
      background: linear-gradient(90deg, #3B82F6 10%, #8b5cf6 60%, #a855f7 95%);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      padding-left: 18px;
      padding-bottom: 0px;
    }
    .algo-category-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 40px;
      margin: 40px auto 90px auto;  
      max-width: 1300px;
    }
    .algo-card {
      background: #232228;
      border-radius: 22px;
      box-shadow: 0 4px 25px rgba(50,50,70,0.20);
      color: #fff;
      padding: 34px 30px 28px 30px;
      transition: transform 0.18s, box-shadow 0.18s;
      min-height: 270px;
      position: relative;
    }
    .algo-card:hover { 
      transform: translateY(-7px) scale(1.022);
      box-shadow: 0 12px 34px 0 #000, 0 2px 10px #222b; 
      background: #21202B;
    }
    .algo-card-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 13px;
    }
    .algo-tags {
      margin-bottom: 11px;
    }
    .algo-tag {
      display: inline-block;
      background: #272A41;
      color: #6BCBFB;
      border-radius: 6px;
      padding: 2px 12px 2px 12px;
      font-size: 0.93rem;
      font-weight: 500;
      margin-right: 10px;
    }
    .algo-tag.easy { background: #2B7A2B; color: #A5FFB9;}
    .algo-tag.medium { background: #CF9F30; color: #FFF3B9;}
    .algo-tag.hard { background: #B02020; color: #FFB4B4;}
    .algo-tag.search { background: #0284C7; color: #fff;}
    .algo-complexity-cases {
      margin-top: 18px;
      font-size: 1.02rem;
    }
    .algo-complexity-cases span {
      display: inline-block;
      margin-right: 7px;
    }
    .complexity-best { color: #14FF75; }
    .complexity-avg { color: #FFE666; }
    .complexity-worst { color: #FF688C; }
    .arrow-link {
      position: absolute;
      right: 23px;
      top: 33px;
      font-size: 1.24rem;
      color: #8c8e97;
      text-decoration: none;
      transition: color 0.2s;
    }
    .arrow-link:hover {
      color: #10B981;
    }
    .algo-description {
      font-size: 1.08rem;
      margin-bottom: 7px;
      color: #d1d6e9;
    }
    @media (max-width: 700px) {
      .main-title { font-size: 2rem; }
      .algo-category-grid { gap: 24px;}
      .algo-card { padding: 22px 10px; }
    }
  </style>
</head>
<body>
  <%- include("partials/header") %>

  <main class="container">
    <div class="main-title">Searching Algorithms</div>
    <div id="algo-cards" class="algo-category-grid"></div>
  </main>

  <%- include("partials/footer") %>

  <script>
    fetch('/json/searching.json')
      .then(response => response.json())
      .then(algorithms => {
        function diffClass(diff) {
          if (diff === "Easy") return "easy";
          if (diff === "Medium") return "medium";
          if (diff === "Hard") return "hard";
          return "";
        }
        let html = "";
        algorithms.forEach(algo => {
          html += `
            <div class="algo-card">
              <div class="algo-card-title">${algo.name}</div>
              <div class="algo-tags">
                <span class="algo-tag search">Searching</span>
                <span class="algo-tag ${diffClass(algo.difficulty)}">${algo.difficulty}</span>
              </div>
              <div class="algo-description">${algo.description}</div>
              <div class="algo-complexity-cases">
                <span>Best Case:</span><span class="complexity-best">${algo.best}</span><br>
                <span>Average Case:</span><span class="complexity-avg">${algo.avg}</span><br>
                <span>Worst Case:</span><span class="complexity-worst">${algo.worst}</span>
              </div>
              <a class="arrow-link" href="${algo.link}"><i class="fa-solid fa-arrow-right"></i></a>
            </div>
          `;
        });
        document.getElementById('algo-cards').innerHTML = html;
      });
  </script>
</body>
</html>
