    <section class="dark-section">
      <div class="card-frame">
        <div class="card">
          <img src="/images/WhatsApp Image 2025-09-13 at 22.40.26_7402133f.jpg" alt="Feature Image">
        </div>
      </div>
    </section>

    <section class="why" id="why-section"></section>

    <section class="categories" id="categories-section"></section>

    <section class="how" id="how-section"></section>

    <section class="cta">
      <div class="cta-box">
        <h2>Ready to transform your learning?</h2>
