        <a href="/login" class="btn-primary">Start Your Journey</a>
      </div>
    </section>

<%- include("partials/footer") %>
  </main>


<script>
  async function loadSection(jsonPath, containerId, templateFn) {
    const response = await fetch(jsonPath);
    const data = await response.json();
    document.getElementById(containerId).innerHTML = templateFn(data);
  }

  function renderWhy(data) {
    return `
      <h2 class="section-title">${data.title}</h2>
      <p class="section-sub">${data.subtitle}</p>
      <div class="features-grid">
        ${data.features.map(f => `
          <div class="feature-card">
            <div class="feature-header">
              <span class="feature-icon"><i class="${f.icon}"></i></span>
              <span class="feature-title">${f.title}</span>
            </div>
            <div class="feature-desc">${f.description}</div>
          </div>
        `).join('')}
      </div>
    `;
  }

  function renderCategories(data) {
    return `
      <div class="categories-container">
        <h2 class="categories-title">${data.title}</h2>
        <p class="categories-sub">${data.subtitle}</p>
        <div class="cats-grid">
          ${data.categories.map(c => `
            <div class="cat-card">
              <span class="${c.iconClass}"><i class="${c.icon}"></i></span>
              <h4>${c.name}</h4>
              <ul>${c.items.map(i => `<li>${i}</li>`).join('')}</ul>
              <a href="${c.link}" class="explore-btn ${c.buttonClass}">Explore Categories</a>
            </div>
          `).join('')}
        </div>
      </div>
    `;
  }

  function renderHow(data) {
    return `
      <h2 class="section-title">${data.title}</h2>
      <p class="section-sub">${data.subtitle}</p>
      <div class="steps-grid">
        ${data.steps.map(s => {
          if (s.type === "card") {
            return `
              <div class="step-card">
                <div class="step-icon">
                  <i class="${s.icon}" style="color: #ffffff;"></i>
                </div>
                <div>
                  <h4>${s.title}</h4>
                  <p>${s.description}</p>
                  <a href="#" class="step-btn">${s.buttonText}</a>
                </div>
              </div>
            `;
          } else if (s.type === "image") {
            return `
              <div class="step-img-card">
                <img src="${s.image}" alt="Step" />
              </div>
            `;
          }
        }).join('')}
      </div>
    `;
  }

  loadSection("/json/why.json", "why-section", renderWhy);
  loadSection("/json/categories.json", "categories-section", renderCategories);
  loadSection("/json/how.json", "how-section", renderHow);
</script>

</body>
</html>
